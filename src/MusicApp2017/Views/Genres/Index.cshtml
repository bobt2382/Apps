                @*<a asp-action="Delete" asp-route-id="@item.GenreID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-info">Go back to Home</a>

</div>

