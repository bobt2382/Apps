@model IEnumerable<MusicApp2017.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h2>Genre Home Page</h2>

<p>
    <a asp-action="Create" class="btn btn-lg btn-info">Add New Music Genre</a>
</p>
<table class="table">

    <thead>

        <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.Name)*@
                  <h3>Available Genres</h3> 
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.Name)*@
